{
  "name": "hotel-common",
  "version": "1.0.0",
  "description": "Hotel management system common library",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "build:force": "tsc --noEmitOnError false",
    "start": "node dist/server/integration-server.js",
    "dev": "ts-node src/server/integration-server.ts",
    "dev:ignore-errors": "ts-node --transpile-only src/server/integration-server.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint --no-inline-config src/**/*.ts",
    "lint:fix": "eslint --no-inline-config src/**/*.ts --fix",
    "check-api-routes": "ts-node scripts/check-api-routes.ts",
    "check-route-order": "ts-node scripts/check-route-order.ts",
    "fix-api-routes": "ts-node scripts/fix-api-routes.ts",
    "dev-history": "ts-node scripts/generate-dev-history.ts",
    "dev-metrics": "ts-node scripts/dev-metrics-dashboard.ts",
    "release-notes": "ts-node scripts/generate-release-notes.ts",
    "api-monitor": "node scripts/api-monitor.js run",
    "api-monitor:continuous": "node scripts/api-monitor.js continuous",
    "api-spec-validate": "node scripts/api-spec-validator.js validate",
    "api-health": "npm run api-monitor && npm run api-spec-validate",
    "pre-commit": "npm run check-api-routes && npm run check-route-order && npm run lint",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run pre-commit"
    }
  },
  "keywords": [
    "hotel",
    "management",
    "api",
    "integration"
  ],
  "author": "Hotel Common Team",
  "license": "MIT",
  "dependencies": {
    "@iconify/vue": "^4.1.2",
    "@prisma/client": "^5.0.0",
    "axios": "^1.4.0",
    "bcrypt": "^5.1.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "glob": "^10.3.10",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.0",
    "morgan": "^1.10.0",
    "node-cache": "^5.1.2",
    "redis": "^4.6.13",
    "socket.io": "^4.7.5",
    "socket.io-client": "^4.7.5",
    "uuid": "^9.0.1",
    "vue": "^3.5.12",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/compression": "^1.7.2",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.5.0",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.0.0",
    "@types/node-cache": "^4.2.5",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "globals": "^13.24.0",
    "husky": "^9.1.7",
    "jest": "^29.5.0",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "prisma": "^5.0.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --no-inline-config --fix",
      "eslint --no-inline-config --max-warnings=0"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
