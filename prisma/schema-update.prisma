model ResponseTree {
  id          String    @id @default(cuid())
  tenantId    String
  name        String
  description String?   @db.Text
  isPublished Boolean   @default(false)
  publishedAt DateTime?
  version     Int       @default(1)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  // ãƒªãƒ¬ãƒ¼ã‚·ãƒ§ãƒ³
  nodes       ResponseNode[]
  sessions    ResponseTreeSession[]
  versions    ResponseTreeVersion[]
  
  @@index([tenantId])
  @@index([isPublished])
  @@map("response_trees")
}

model ResponseNode {
  id          String    @id @default(cuid())
  treeId      String
  nodeType    String    // TEXT, QUESTION, ACTION, etc.
  content     String?   @db.Text
  metadata    Json?
  isRoot      Boolean   @default(false)
  parentId    String?
  position    Int       @default(0)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  // ãƒªãƒ¬ãƒ¼ã‚·ãƒ§ãƒ³
  tree        ResponseTree @relation(fields: [treeId], references: [id], onDelete: Cascade)
  parent      ResponseNode? @relation("NodeToNode", fields: [parentId], references: [id], onDelete: SetNull)
  children    ResponseNode[] @relation("NodeToNode")
  translations ResponseNodeTranslation[]
  
  @@index([treeId])
  @@index([parentId])
  @@index([isRoot])
  @@map("response_nodes")
}

model ResponseNodeTranslation {
  id          String   @id @default(cuid())
  nodeId      String
  locale      String
  content     String?  @db.Text
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // ãƒªãƒ¬ãƒ¼ã‚·ãƒ§ãƒ³
  node        ResponseNode @relation(fields: [nodeId], references: [id], onDelete: Cascade)
  
  @@unique([nodeId, locale])
  @@map("response_node_translations")
}

model ResponseTreeSession {
  id          String    @id @default(cuid())
  treeId      String
  userId      String?
  deviceId    String?
  currentNodeId String?
  metadata    Json?
  isComplete  Boolean   @default(false)
  startedAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  completedAt DateTime?
  
  // ãƒªãƒ¬ãƒ¼ã‚·ãƒ§ãƒ³
  tree        ResponseTree @relation(fields: [treeId], references: [id], onDelete: Cascade)
  history     ResponseTreeHistory[]
  mobileLinks ResponseTreeMobileLink[]
  
  @@index([treeId])
  @@index([userId])
  @@index([deviceId])
  @@index([isComplete])
  @@map("response_tree_sessions")
}

model ResponseTreeHistory {
  id          String   @id @default(cuid())
  sessionId   String
  nodeId      String
  response    String?  @db.Text
  metadata    Json?
  createdAt   DateTime @default(now())
  
  // ãƒªãƒ¬ãƒ¼ã‚·ãƒ§ãƒ³
  session     ResponseTreeSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  
  @@index([sessionId])
  @@map("response_tree_history")
}

model ResponseTreeVersion {
  id          String   @id @default(cuid())
  treeId      String
  version     Int
  snapshot    Json
  createdAt   DateTime @default(now())
  createdBy   String?
  
  // ãƒªãƒ¬ãƒ¼ã‚·ãƒ§ãƒ³
  tree        ResponseTree @relation(fields: [treeId], references: [id], onDelete: Cascade)
  
  @@unique([treeId, version])
  @@map("response_tree_versions")
}

model ResponseTreeMobileLink {
  id          String    @id @default(cuid())
  sessionId   String
  code        String    @unique
  qrCodeData  String?   @db.Text
  isActive    Boolean   @default(true)
  connectionId String?
  createdAt   DateTime  @default(now())
  expiresAt   DateTime
  connectedAt DateTime?
  
  // ãƒªãƒ¬ãƒ¼ã‚·ãƒ§ãƒ³
  session     ResponseTreeSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  
  @@index([code])
  @@index([isActive])
  @@map("response_tree_mobile_links")
}

